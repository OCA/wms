<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="contains_dangerous_goods" groups="base.group_no_one" />
            </field>
            <field name="origin" position="after">
                <field name="display_dangerous_goods_carrier_warning" invisible="1" />
                <div
                    role="alert"
                    class="alert alert-warning"
                    attrs="{'invisible': [('display_dangerous_goods_carrier_warning', '=', False)]}"
                    colspan="2"
                >
                    <field name="dangerous_goods_carrier_warning" nolabel="1" />
                </div>
            </field>
        </field>
    </record>
</odoo>
