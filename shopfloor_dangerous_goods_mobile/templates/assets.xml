<odoo>
    <template
        id="shopfloor_app_assets"
        inherit_id="shopfloor_mobile.shopfloor_app_assets"
    >
        <script id="script_component_picking_select" position="after">
            <t
                t-set="mod_version"
                t-value="get_version('shopfloor_dangerous_goods_mobile')"
            />
            <script
                id="script_component_picking_select_dangerous_goods"
                t-attf-src="/shopfloor_dangerous_goods_mobile/static/wms/src/components/picking_select.js?v=#{mod_version}"
                type="module"
            />
        </script>
        <link id="link_css_main" position="after">
            <t
                t-set="mod_version"
                t-value="get_version('shopfloor_dangerous_goods_mobile')"
            />
            <link
                id="link_css_dangerous_goods"
                t-attf-href="/shopfloor_dangerous_goods_mobile/static/wms/src/css/dangerous_goods.css?v=#{mod_version}"
                rel="stylesheet"
            />
        </link>
    </template>
    <template
        id="shopfloor_app_demo_assets"
        inherit_id="shopfloor_mobile_base.shopfloor_app_demo_assets"
    >
        <xpath expr="//script[last()]" position="after">
            <t
                t-set="mod_version"
                t-value="get_version('shopfloor_dangerous_goods_mobile')"
            />
            <script
                id="script_demo_checkout"
                t-attf-src="/shopfloor_dangerous_goods_mobile/static/wms/src/js/demo/demo.checkout.js?v=#{mod_version}"
                type="module"
            />
        </xpath>
    </template>
</odoo>
