<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_inherit" model="ir.ui.view">
        <field name="name">delivery.carrier.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="adr_settings" string="ADR Settings">
                    <group name="adr_warnings">
                        <p
                        >ADR settings allows to raise a warning when this delivery carrier is used on a document with a product having a match on its ADR settings.</p>
                        <group name="adr_limited_amount" string="ADR Limited Amount">
                            <field
                                name="adr_limited_amount_ids"
                                widget="many2many_tags"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
