<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shopfloor_process_tree_view" model="ir.ui.view">
        <field name="name">shopfloor process tree</field>
        <field name="model">shopfloor.process</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="picking_type_id"/>
            </tree>
        </field>
    </record>

    <record id="shopfloor_process_form_view" model="ir.ui.view">
        <field name="name">shopfloor process form</field>
        <field name="model">shopfloor.process</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="picking_type_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shopfloor_process_search_view" model="ir.ui.view">
        <field name="name">shopfloor process search</field>
        <field name="model">shopfloor.process</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="picking_type_id"/>
            </search>
        </field>
    </record>

    <record id="action_shopfloor_process" model="ir.actions.act_window">
        <field name="name">Processes</field>
        <field name="res_model">shopfloor.process</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
