<odoo>

    <record model="ir.ui.view" id="stock_release_channel_form_view">
        <field name="model">stock.release.channel</field>
        <field
            name="inherit_id"
            ref="stock_release_channel.stock_release_channel_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="button_plan_shipments"
                    type="object"
                    string="Plan Shipment"
                    groups="stock.group_stock_manager"
                    attrs="{'invisible': [('can_plan_shipment', '=', False)]}"
                />
                <button
                    name="action_print_shipment"
                    type="object"
                    string="Print Shipment"
                    attrs="{'invisible': [('is_action_print_shipment_allowed', '=', False)]}"
                />
                <button
                    name="action_print_deliveryslip"
                    type="object"
                    string="Print Deliveries"
                    attrs="{'invisible': [('is_action_print_shipment_allowed', '=', False)]}"
                />
                <field name="is_action_print_shipment_allowed" invisible="1" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="button_show_shipment_advice"
                    icon="fa-calendar"
                    string="Shipment Advice"
                    context="{'default_release_channel_id':active_id}"
                />
            </xpath>
            <xpath expr="//field[@name='release_mode']" position="before">
                <field name="can_plan_shipment" invisible="1" />
                <field name="shipment_planning_method" />
                <field
                    name="dock_id"
                    attrs="{'invisible': [('warehouse_id', '=', False)]}"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_release_channel_kanban_view">
        <field name="model">stock.release.channel</field>
        <field
            name="inherit_id"
            ref="stock_release_channel.stock_release_channel_kanban_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='actions dropdown-menu-left-panel']"
                position="inside"
            >
                <field name="can_plan_shipment" invisible="1" />
                <t t-if="record.can_plan_shipment.raw_value">
                    <div
                        role="menuitem"
                        groups="stock.group_stock_manager"
                        name="action_plan_shipment"
                    >
                        <a
                            name="button_plan_shipments"
                            type="object"
                            icon="fa-truck"
                        ><span class="ms-2">Plan Shipments</span></a>
                    </div>
                </t>
            </xpath>
            <xpath expr="//div[@name='dropdown-menu-right-panel']" position="inside">
                <field name="is_action_print_shipment_allowed" invisible="1" />
                <div role="menuitem" class="o_kanban_card_manage_title">
                     <span>Print</span>
                </div>
                <t t-if="record.is_action_print_shipment_allowed.raw_value">
                    <div role="menuitem">
                        <a
                            name="action_print_shipment"
                            type="object"
                            icon="fa-archive"
                        ><span class="ms-2">Print Shipment</span></a>
                    </div>
                </t>
                <t t-if="record.is_action_print_shipment_allowed.raw_value">
                    <div role="menuitem">
                        <a
                            name="action_print_deliveryslip"
                            type="object"
                            icon="fa-truck"
                        ><span class="ms-2">Print Deliveries</span></a>
                    </div>
                </t>
            </xpath>
        </field>
    </record>



</odoo>
