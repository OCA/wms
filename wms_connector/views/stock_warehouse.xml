<odoo>

    <record model="ir.ui.view" id="stock_warehouse_form_view">
        <field name="name">stock.warehouse.form (in wms_connector)</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="active_wms_sync"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page name="wms_sync" string="Synchronization" attrs="{'invisible': [('active_wms_sync', '=', False)]}">
                    <field name="sync_task_id"/>
                    <field name="sync_cron_id"/>
                </page>
            </xpath>


            <div class="oe_button_box" position="inside">
                <button name="action_open_flows"
                        string="View flows"
                        icon="fa-refresh"
                        class="oe_stat_button"
                        type="object"/>
            </div>

        </field>
    </record>

</odoo>
