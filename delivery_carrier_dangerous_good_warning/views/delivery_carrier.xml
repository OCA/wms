<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_inherit" model="ir.ui.view">
        <field name="name">delivery.carrier.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="dangerous_goods" string="Dangerous Goods">
                    <group name="warning">
                        <field name="dangerous_goods_warning" />
                    </group>
                    <group
                        name="limited_amount"
                        string="Limited Amount"
                        attrs="{'invisible': [('dangerous_goods_warning', '=', False)]}"
                    >
                        <field
                            name="dangerous_goods_limited_amount_ids"
                            widget="many2many_tags"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
